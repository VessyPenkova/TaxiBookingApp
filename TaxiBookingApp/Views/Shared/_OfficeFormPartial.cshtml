@using TaxiBookingApp.Controllers
@using TaxiBookingApp.Core.Models.OfficeM
@model OfficeModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.OfficeId" />
            <div class="form-group">
                <label asp-for="City"></label>
                <input asp-for="City" class="form-control" placeholder="Citeated at ..">
                <span asp-validation-for="City" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" placeholder="Choose a country...">
                <span asp-validation-for="Country" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeImageUrl"></label>
                <input asp-for="OfficeImageUrl" class="form-control" placeholder="Come to see us in person at......">
                <span asp-validation-for="OfficeImageUrl" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
